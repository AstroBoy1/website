---
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import ContactLayout from "@/layouts/contact-layout.astro";
---

<ContactLayout
  title="About Us | App Development Club at Oregon State University"
  description="The App Development Club at Oregon State University is a student-run organization that focuses on teaching students how to develop all types of applications."
  mainClass="container py-10 p-12"
>
  <h1 class="font-heading text-4xl">Contact Us</h1>
  <p class="mt-4 text-gray-500 dark:text-gray-400">
    We'd love to hear from you! Send us a message and we'll get back to you as
    soon as possible.
  </p>
  <div class="w-full pt-8"></div>
  <div class="flex flex-col items-center justify-center">
    <div class="grid w-full gap-4 px-4 lg:grid-cols-3 lg:px-0">
      <div class="space-y-2 lg:col-span-2 lg:space-y-4">
        <div class="space-y-4">
          <div class="grid grid-cols-2 gap-4">
            <div class="space-y-2">
              <Label htmlFor="first-name">First name</Label>
              <Input id="first-name" placeholder="Enter your first name" />
            </div>
            <div class="space-y-2">
              <Label htmlFor="last-name">Last name</Label>
              <Input id="last-name" placeholder="Enter your last name" />
            </div>
          </div>
          <div class="space-y-2">
            <Label htmlFor="email">Email</Label>
            <Input id="email" placeholder="Enter your email" />
          </div>
          <div class="space-y-2">
            <Label htmlFor="subject">Subject</Label>
            <Input id="subject" placeholder="Enter the subject" />
          </div>
          <div class="space-y-2">
            <Label htmlFor="message">Message</Label>
            <Textarea
              className="min-h-[150px]"
              id="message"
              placeholder="Enter your message"
            />
          </div>
        </div>
        <Button size="lg">Submit</Button>
      </div>
      <div
        class="space-y-4 border border-gray-200 dark:border-gray-800 rounded-lg p-6"
      >
        <div class="space-y-2">
          <h3 class="text-2xl font-bold">Contact Information</h3>
          <p class="text-gray-500 dark:text-gray-400">
            Contact us by phone, email, or visit us at our office
          </p>
        </div>
        <div class="space-y-4">
          <div class="space-y-2">
            <h4 class="font-semibold">Call us</h4>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              Monday to Friday
              <br />
              9:00 am to 5:00 pm{"\n                              "}
            </p>
          </div>
          <div class="space-y-2">
            <h4 class="font-semibold">Email us</h4>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              We'll get back to you within 24 hours
            </p>
          </div>
          <div class="space-y-2">
            <h4 class="font-semibold">Visit our office</h4>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              123 Street Name, City, Country
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</ContactLayout>
