---
import { Icons } from "@/icons";
import { cn } from "@/lib/utils";

type Props = {
  className?: string;
};
const { className } = Astro.props;
---

<footer class={cn(className)}>
  <div
    class="container flex flex-col items-center justify-end gap-4 py-10 md:h-24 md:flex-row md:py-0"
  >
    <div
      class="inline-flex flex-col items-center gap-4 px-8 md:flex-row md:gap-2 md:px-0"
    >
      <a href="/" aria-label="OSU App Club Homepage">
        <Icons.beaver className="size-8" client:visible />
      </a>
      <p class="text-center text-xs md:text-right leading-loose balance-text">
        Coded with <span class="text-red-600">❤️</span> by{" "}
        <a href="/about/#team" class="font-medium underline underline-offset-4">
          The App Development Club Team
        </a>
      </p>
    </div>
  </div>
</footer>
